<div class="author">
  <h1 class="author__heading">Apex-MC server</h1>
  <p class="author__body">
    Dedicated to fostering a welcoming community on the Apex-MC server, where
    creativity and collaboration thrive.
  </p>
</div>

<img
  src="/img/Mcwallpeaper.png"
  alt="person looking out through window"
  class="hero-image"
  width="981"
  height="528"
/>

<section class="articles">
  <h2 class="articles__heading">Latest Server Updates</h2>

  <ul class="article-ul">
    <% data.forEach(post => { %>
    <li>
      <a href="/post/<%= post._id %>">
        <span><%= post.title %></span>
        <span class="article-list__date"
          ><%= post.createdAt.toDateString() %></span
        >
      </a>
    </li>
    <% }) %>
  </ul>
  <% if (nextPage !== null) { %>
  <a href="/?page=<%= nextPage %>" class="pagination"
    >&lt; View Older Server Updates</a
  >
  <% } %>
</section>
